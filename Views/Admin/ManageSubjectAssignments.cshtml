@model TutorLiveMentor.Models.SubjectManagementViewModel
@{
    ViewData["Title"] = "Manage Subject Assignments";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --cseds-purple: #6f42c1;
            --cseds-teal: #20c997;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .page-header {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .page-header h1 {
            color: var(--royal-blue);
            font-weight: 700;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .page-header .breadcrumb {
            background: none;
            padding: 0;
            margin: 0;
        }

        .page-header .breadcrumb-item a {
            color: var(--cseds-purple);
            text-decoration: none;
        }

        .subjects-section {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .section-title {
            color: var(--royal-blue);
            font-weight: 700;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--cseds-purple) 0%, var(--cseds-teal) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 12px 25px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 6px 20px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--cseds-teal) 0%, var(--cseds-purple) 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.4);
            text-decoration: none;
            color: white;
        }

        .btn-danger {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        }

        .btn-warning {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
            color: #212529;
        }

        .btn-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        }

        .btn-info {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        }

        .subject-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .subject-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(111, 66, 193, 0.2);
        }

        .subject-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 20px;
        }

        .subject-info h4 {
            color: var(--royal-blue);
            font-weight: 700;
            margin-bottom: 5px;
        }

        .subject-badges {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .subject-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.8em;
            font-weight: 600;
        }

        .badge-year { background: #e3f2fd; color: #1976d2; }
        .badge-semester { background: #f3e5f5; color: #7b1fa2; }
        .badge-enrollments { background: #e8f5e8; color: #388e3c; }
        .badge-status.active { background: #d4edda; color: #155724; }
        .badge-status.inactive { background: #f8d7da; color: #721c24; }

        .subject-details {
            margin-bottom: 20px;
            color: #666;
        }

        .faculty-assignments {
            background: rgba(111, 66, 193, 0.05);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
        }

        .faculty-assignments h6 {
            color: var(--royal-blue);
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .faculty-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .faculty-item {
            background: white;
            border: 1px solid rgba(111, 66, 193, 0.2);
            border-radius: 8px;
            padding: 10px 15px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 10px;
            min-width: 200px;
        }

        .faculty-info {
            flex: 1;
        }

        .faculty-name {
            font-weight: 600;
            color: var(--royal-blue);
        }

        .faculty-email {
            font-size: 0.8em;
            color: #666;
        }

        .remove-faculty-btn {
            background: none;
            border: none;
            color: #dc3545;
            cursor: pointer;
            padding: 5px;
            border-radius: 3px;
            transition: all 0.3s ease;
        }

        .remove-faculty-btn:hover {
            background: rgba(220, 53, 69, 0.1);
        }

        .no-faculty {
            text-align: center;
            color: #666;
            font-style: italic;
            padding: 20px;
        }

        .assignment-controls {
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .modal {
            backdrop-filter: blur(4px);
        }

        .modal-content {
            background: rgba(249,250,242,0.98);
            border-radius: 20px;
            border: 2px solid var(--slate);
            box-shadow: 0 15px 50px rgba(0,0,0,0.3);
        }

        .modal-header {
            background: linear-gradient(135deg, var(--cseds-purple), var(--cseds-teal));
            color: white;
            border-radius: 18px 18px 0 0;
            border-bottom: none;
        }

        .modal-title {
            font-weight: 700;
        }

        .form-label {
            font-weight: 600;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9em;
        }

        .form-control, .form-select {
            border: 2px solid var(--slate);
            border-radius: 8px;
            padding: 12px;
            background: rgba(255, 255, 255, 0.8);
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--cseds-purple);
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        /* Faculty Selection Checkboxes */
        .faculty-selection-container {
            background: rgba(111, 66, 193, 0.05);
            border-radius: 10px;
            padding: 20px;
            border: 2px solid var(--slate);
        }

        .search-box input {
            border-radius: 10px;
            border: 2px solid var(--slate);
            padding: 10px 15px;
        }

        .search-box input:focus {
            border-color: var(--cseds-purple);
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
        }

        .faculty-checkboxes {
            max-height: 350px;
            overflow-y: auto;
            padding: 10px;
            background: white;
            border-radius: 8px;
        }

        .faculty-checkbox-item {
            padding: 12px 15px;
            border-radius: 8px;
            transition: all 0.2s ease;
            border: 1px solid transparent;
            margin-bottom: 8px;
        }

        .faculty-checkbox-item:hover {
            background: rgba(111, 66, 193, 0.05);
            border-color: var(--cseds-purple);
        }

        .faculty-checkbox-item.hidden {
            display: none;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            cursor: pointer;
            margin-top: 8px;
        }

        .form-check-input:checked {
            background-color: var(--cseds-purple);
            border-color: var(--cseds-purple);
        }

        .form-check-label {
            cursor: pointer;
            width: 100%;
            padding-left: 10px;
        }

        .faculty-checkbox-info {
            display: flex;
            flex-direction: column;
        }

        .faculty-checkbox-name {
            font-weight: 600;
            color: var(--royal-blue);
            font-size: 1em;
        }

        .faculty-checkbox-email {
            font-size: 0.85em;
            color: #666;
        }

        .selection-summary {
            background: white;
            padding: 12px;
            border-radius: 8px;
            text-align: center;
            font-weight: 600;
            color: var(--royal-blue);
            border: 2px solid var(--slate);
        }

        .selection-summary span {
            color: var(--cseds-purple);
            font-size: 1.2em;
        }

        .alert {
            border-radius: 15px;
            border: none;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .subjects-section {
                padding: 20px;
            }

            .subject-header {
                flex-direction: column;
                gap: 15px;
            }

            .faculty-item {
                min-width: 100%;
            }

            .assignment-controls {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Page Header -->
        <div class="page-header">
            <h1>
                <i class="fas fa-link"></i>
                Manage Faculty-Subject Assignments
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("CSEDSDashboard", "Admin")">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Subject Assignments</li>
                </ol>
            </nav>
        </div>

        <!-- Subjects Assignment Section -->
        <div class="subjects-section">
            <div class="section-title">
                <h3><i class="fas fa-database"></i> CSEDS Subjects & Faculty Assignments</h3>
                <div>
                    <a href="@Url.Action("ManageCSEDSSubjects", "Admin")" class="glass-btn">
                        <i class="fas fa-plus"></i> Manage Subjects
                    </a>
                    <a href="@Url.Action("ManageCSEDSFaculty", "Admin")" class="glass-btn">
                        <i class="fas fa-users"></i> Manage Faculty
                    </a>
                </div>
            </div>

            <!-- Subject Cards -->
            @foreach (var subject in Model.DepartmentSubjects)
            {
                <div class="subject-card">
                    <!-- Subject Header -->
                    <div class="subject-header">
                        <div class="subject-info">
                            <h4>@subject.Name</h4>
                            <div class="subject-badges">
                                <span class="subject-badge badge-year">Year @subject.Year</span>
                                <span class="subject-badge badge-semester">Semester @subject.Semester</span>
                                <span class="subject-badge badge-enrollments">@subject.TotalEnrollments Students</span>
                                <span class="subject-badge badge-status @(subject.IsActive ? "active" : "inactive")">
                                    @(subject.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Subject Details -->
                    <div class="subject-details">
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Department:</strong> @subject.Department
                            </div>
                            <div class="col-md-6">
                                <strong>Semester Period:</strong> 
                                @if (subject.SemesterStartDate.HasValue && subject.SemesterEndDate.HasValue)
                                {
                                    <span>@subject.SemesterStartDate.Value.ToString("MMM dd, yyyy") - @subject.SemesterEndDate.Value.ToString("MMM dd, yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Faculty Assignments -->
                    <div class="faculty-assignments">
                        <h6>
                            <i class="fas fa-chalkboard-teacher"></i>
                            Assigned Faculty (@subject.AssignedFaculty.Count)
                        </h6>
                        
                        @if (subject.AssignedFaculty.Any())
                        {
                            <div class="faculty-list">
                                @foreach (var faculty in subject.AssignedFaculty)
                                {
                                    <div class="faculty-item">
                                        <div class="faculty-info">
                                            <div class="faculty-name">@faculty.Name</div>
                                            <div class="faculty-email">@faculty.Email</div>
                                        </div>
                                        <button type="button" class="remove-faculty-btn" 
                                                onclick="removeFacultyAssignment(@faculty.AssignedSubjectId, '@faculty.Name', '@subject.Name')"
                                                title="Remove assignment">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="no-faculty">
                                <i class="fas fa-exclamation-triangle"></i>
                                No faculty assigned to this subject
                            </div>
                        }

                        <!-- Assignment Controls -->
                        <div class="assignment-controls">
                            <button type="button" class="btn btn-info btn-sm" 
                                    onclick="assignFacultyToSubject(@subject.SubjectId, '@subject.Name')">
                                <i class="fas fa-plus"></i> Assign Faculty
                            </button>
                            <button type="button" class="btn btn-warning btn-sm" 
                                    onclick="viewSubjectDetails(@subject.SubjectId, '@subject.Name')">
                                <i class="fas fa-eye"></i> View Details
                            </button>
                        </div>
                    </div>
                </div>
            }

            @if (!Model.DepartmentSubjects.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i>
                    No subjects found in the CSEDS department. 
                    <a href="@Url.Action("ManageCSEDSSubjects", "Admin")" class="alert-link">Add some subjects</a> to get started.
                </div>
            }
        </div>
    </div>

    <!-- Assign Faculty Modal -->
    <div class="modal fade" id="assignFacultyModal" tabindex="-1" aria-labelledby="assignFacultyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignFacultyModalLabel">
                        <i class="fas fa-link"></i> Assign Faculty to Subject
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="assignFacultyForm">
                    <input type="hidden" id="assignSubjectId">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="subjectName" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subjectName" readonly>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Select Faculty Members</label>
                            <div class="faculty-selection-container">
                                <div class="search-box mb-3">
                                    <input type="text" class="form-control" id="facultySearch" 
                                           placeholder="?? Search faculty by name or email...">
                                </div>
                                <div class="faculty-checkboxes" id="facultyCheckboxList">
                                    @foreach (var faculty in Model.AvailableFaculty)
                                    {
                                        <div class="form-check faculty-checkbox-item" data-faculty-name="@faculty.Name.ToLower()" data-faculty-email="@faculty.Email.ToLower()">
                                            <input class="form-check-input" type="checkbox" value="@faculty.FacultyId" 
                                                   id="faculty_@faculty.FacultyId" name="selectedFaculty">
                                            <label class="form-check-label" for="faculty_@faculty.FacultyId">
                                                <div class="faculty-checkbox-info">
                                                    <div class="faculty-checkbox-name">@faculty.Name</div>
                                                    <div class="faculty-checkbox-email">@faculty.Email</div>
                                                </div>
                                            </label>
                                        </div>
                                    }
                                </div>
                                <div class="selection-summary mt-3">
                                    <span id="selectedCount">0</span> faculty member(s) selected
                                </div>
                            </div>
                        </div>
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Note:</strong> Assigning new faculty will replace all current assignments for this subject.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            <i class="fas fa-times"></i> Cancel
                        </button>
                        <button type="submit" class="glass-btn">
                            <i class="fas fa-save"></i> Assign Faculty
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Subject Details Modal -->
    <div class="modal fade" id="subjectDetailsModal" tabindex="-1" aria-labelledby="subjectDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="subjectDetailsModalLabel">
                        <i class="fas fa-info-circle"></i> Subject Details
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="subjectDetailsContent">
                    <!-- Dynamic content will be loaded here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

    <script>
        $(document).ready(function() {
            // Update selected count when checkboxes change
            $(document).on('change', 'input[name="selectedFaculty"]', function() {
                updateSelectedCount();
            });

            // Faculty search functionality
            $('#facultySearch').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('.faculty-checkbox-item').each(function() {
                    const name = $(this).data('faculty-name');
                    const email = $(this).data('faculty-email');
                    
                    if (name.includes(searchTerm) || email.includes(searchTerm)) {
                        $(this).removeClass('hidden');
                    } else {
                        $(this).addClass('hidden');
                    }
                });
            });
        });

        // Update selected count display
        function updateSelectedCount() {
            const count = $('input[name="selectedFaculty"]:checked').length;
            $('#selectedCount').text(count);
        }

        // Assign Faculty to Subject
        function assignFacultyToSubject(subjectId, subjectName) {
            document.getElementById('assignSubjectId').value = subjectId;
            document.getElementById('subjectName').value = subjectName;
            
            // Clear all checkboxes
            $('input[name="selectedFaculty"]').prop('checked', false);
            updateSelectedCount();
            
            // Clear search
            $('#facultySearch').val('');
            $('.faculty-checkbox-item').removeClass('hidden');
            
            new bootstrap.Modal(document.getElementById('assignFacultyModal')).show();
        }

        // Assign Faculty Form Submission
        document.getElementById('assignFacultyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Get all checked faculty IDs
            const selectedFaculty = Array.from(document.querySelectorAll('input[name="selectedFaculty"]:checked'))
                .map(checkbox => parseInt(checkbox.value));

            if (selectedFaculty.length === 0) {
                showAlert('Please select at least one faculty member', 'warning');
                return;
            }

            const formData = {
                SubjectId: parseInt(document.getElementById('assignSubjectId').value),
                FacultyIds: selectedFaculty
            };

            try {
                const response = await fetch('@Url.Action("AssignFacultyToSubject", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();
                
                if (result.success) {
                    showAlert('Faculty assigned successfully!', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('assignFacultyModal')).hide();
                    location.reload(); // Refresh to show updated assignments
                } else {
                    showAlert('Error assigning faculty: ' + (result.message || 'Unknown error'), 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error assigning faculty. Please try again.', 'danger');
            }
        });

        // Remove Faculty Assignment
        async function removeFacultyAssignment(assignedSubjectId, facultyName, subjectName) {
            if (!confirm(`Are you sure you want to remove "${facultyName}" from "${subjectName}"?`)) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("RemoveFacultyAssignment", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ AssignedSubjectId: assignedSubjectId })
                });

                const result = await response.json();
                
                if (result.success) {
                    showAlert('Faculty assignment removed successfully!', 'success');
                    location.reload(); // Refresh to show updated assignments
                } else {
                    showAlert('Error removing assignment: ' + (result.message || 'Unknown error'), 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error removing assignment. Please try again.', 'danger');
            }
        }

        // View Subject Details
        function viewSubjectDetails(subjectId, subjectName) {
            document.getElementById('subjectDetailsModalLabel').innerHTML = 
                `<i class="fas fa-info-circle"></i> ${subjectName} - Details`;
            
            // For now, show a simple message. This could be enhanced to show enrollment details, etc.
            document.getElementById('subjectDetailsContent').innerHTML = `
                <div class="alert alert-info">
                    <h6>Subject Information</h6>
                    <p><strong>Subject:</strong> ${subjectName}</p>
                    <p><strong>Subject ID:</strong> ${subjectId}</p>
                    <p>Detailed enrollment and assignment information will be available here.</p>
                </div>
            `;
            
            new bootstrap.Modal(document.getElementById('subjectDetailsModal')).show();
        }

        // Utility function to show alerts
        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            // Insert at the top of the main container
            document.querySelector('.main-container').insertBefore(alertDiv, document.querySelector('.page-header'));
            
            // Auto dismiss after 5 seconds
            setTimeout(() => {
                if (alertDiv && alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }
    </script>

@model TutorLiveMentor.Models.Student

@{
    ViewData["Title"] = "Student Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Profile - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 900px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.5em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0;
            letter-spacing: 1.2px;
        }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 10px;
            font-weight: 600;
        }

        .alert-success {
            color: var(--success-green);
            background-color: rgba(40, 167, 69, 0.1);
            border-color: var(--success-green);
        }

        .alert-danger {
            color: var(--error-red);
            background-color: rgba(220, 53, 69, 0.1);
            border-color: var(--error-red);
        }

        .profile-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 40px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            margin-bottom: 30px;
        }

        .profile-header {
            display: flex;
            align-items: center;
            gap: 25px;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--slate);
        }

        .profile-avatar {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3em;
            color: white;
            box-shadow: 0 8px 25px var(--card-shadow);
        }

        .profile-info h3 {
            margin: 0 0 10px 0;
            font-size: 2em;
            font-weight: 700;
            color: var(--royal-blue);
        }

        .profile-info p {
            margin: 0;
            font-size: 1.2em;
            color: #666;
        }

        .profile-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .detail-row {
            display: flex;
            align-items: center;
            padding: 15px;
            background: rgba(255, 255, 255, 0.5);
            border-radius: 10px;
            border-left: 4px solid var(--royal-blue);
            transition: all 0.3s ease;
        }

        .detail-row:hover {
            background: rgba(255, 255, 255, 0.8);
            transform: translateX(5px);
        }

        .detail-icon {
            font-size: 1.5em;
            margin-right: 15px;
            color: var(--royal-blue);
        }

        .detail-content {
            flex-grow: 1;
        }

        .detail-label {
            font-weight: 600;
            font-size: 0.9em;
            color: var(--royal-blue);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .detail-value {
            font-size: 1.1em;
            color: #333;
            font-weight: 500;
        }

        .faculty-status {
            color: var(--error-red);
            font-style: italic;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-top: 30px;
        }

        .glass-btn {
            background: linear-gradient(135deg, var(--royal-blue) 0%, var(--warm-gold) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            box-shadow: 0 8px 25px var(--card-shadow);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .glass-btn:hover {
            background: linear-gradient(135deg, var(--warm-gold) 0%, var(--royal-blue) 100%);
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(255, 200, 87, 0.4);
            text-decoration: none;
            color: white;
        }

        .glass-btn.secondary {
            background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%);
        }

        .glass-btn.secondary:hover {
            background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%);
        }

        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 30px 20px;
                margin-bottom: 30px;
            }

            .dashboard-header h2 {
                font-size: 2em;
            }

            .profile-card {
                padding: 25px 20px;
            }

            .profile-header {
                flex-direction: column;
                text-align: center;
                gap: 20px;
            }

            .profile-details {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
            }

            .glass-btn {
                width: 100%;
                max-width: 250px;
                justify-content: center;
            }

            .nav-link {
                position: static;
                display: inline-block;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("MainDashboard", "Student")" class="nav-link">🏠 Back to Dashboard</a>
    
    <div class="main-container">
        <div class="dashboard-header">
            <h2>Student Profile</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-avatar">
                    👤
                </div>
                <div class="profile-info">
                    <h3>@Model.FullName</h3>
                    <p>Registration Number: @Model.RegdNumber</p>
                </div>
            </div>

            <div class="profile-details">
                <div class="detail-row">
                    <div class="detail-icon">🎓</div>
                    <div class="detail-content">
                        <div class="detail-label">Academic Year</div>
                        <div class="detail-value">@Model.Year</div>
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-icon">🏢</div>
                    <div class="detail-content">
                        <div class="detail-label">Department</div>
                        <div class="detail-value">@Model.Department</div>
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-icon">📧</div>
                    <div class="detail-content">
                        <div class="detail-label">Email Address</div>
                        <div class="detail-value">@Model.Email</div>
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-icon">🔒</div>
                    <div class="detail-content">
                        <div class="detail-label">Password</div>
                        <div class="detail-value">@Model.Password</div>
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-icon">👩‍🏫</div>
                    <div class="detail-content">
                        <div class="detail-label">Assigned Faculty</div>
                        <div class="detail-value faculty-status">Check Assigned Faculty section</div>
                    </div>
                </div>

                <div class="detail-row">
                    <div class="detail-icon">📚</div>
                    <div class="detail-content">
                        <div class="detail-label">Enrolled Subjects</div>
                        <div class="detail-value">@Model.Enrollments.Count() Subject(s)</div>
                    </div>
                </div>
            </div>

            <div class="action-buttons">
                <a href="@Url.Action("ChangePassword", "Student")" class="glass-btn">
                    🔑 Change Password
                </a>
                <a href="@Url.Action("MainDashboard", "Student")" class="glass-btn secondary">
                    🏠 Main Dashboard
                </a>
                <a href="@Url.Action("Logout", "Student")" class="glass-btn secondary">
                    🚪 Logout
                </a>
            </div>
        </div>
    </div>
</body>
</html>

@model TutorLiveMentor.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Change Password - TutorLiveMentor</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)), url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 0;
                display: block;
                background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
                opacity: 0.20;
                pointer-events: none;
            }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 600px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
        }

            .nav-link:hover {
                background: var(--warm-gold);
                color: var(--royal-blue);
                transform: translateY(-2px);
                text-decoration: none;
            }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

            .dashboard-header h2 {
                font-size: 2.5em;
                font-weight: 700;
                color: var(--royal-blue);
                margin: 0;
                letter-spacing: 1.2px;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 12px;
            }

        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border: 1px solid transparent;
            border-radius: 10px;
            font-weight: 600;
        }

        .alert-success {
            color: var(--success-green);
            background-color: rgba(40, 167, 69, 0.1);
            border-color: var(--success-green);
        }

        .alert-danger {
            color: var(--error-red);
            background-color: rgba(220, 53, 69, 0.1);
            border-color: var(--error-red);
        }

        .password-form-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 40px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .student-info {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--slate);
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            font-weight: 700;
            font-size: 1.5em;
            color: var(--royal-blue);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--royal-blue);
            font-size: 1.1em;
        }

        .form-input {
            width: 100%;
            padding: 15px;
            border: 2px solid var(--slate);
            border-radius: 10px;
            font-size: 1em;
            font-family: 'Montserrat', Arial, sans-serif;
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

            .form-input:focus {
                outline: none;
                border-color: var(--warm-gold);
                background: rgba(255, 255, 255, 1);
                box-shadow: 0 0 0 3px rgba(255, 200, 87, 0.2);
            }

        .validation-error {
            color: var(--error-red);
            font-size: 0.9em;
            margin-top: 5px;
            display: block;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 35px;
            flex-wrap: wrap;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--royal-blue) 0%, var(--warm-gold) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px var(--card-shadow);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--warm-gold) 0%, var(--royal-blue) 100%);
                transform: translateY(-3px);
                box-shadow: 0 12px 35px rgba(255, 200, 87, 0.4);
            }

        .btn-secondary {
            background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-secondary:hover {
                background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%);
                transform: translateY(-3px);
                text-decoration: none;
                color: white;
            }

        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 30px 20px;
            }

                .dashboard-header h2 {
                    font-size: 2em;
                }

            .password-form-card {
                padding: 25px 20px;
            }

            .form-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .btn-primary, .btn-secondary {
                justify-content: center;
            }

            .nav-link {
                position: static;
                display: inline-block;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Dashboard", "Student")" class="nav-link"><i class="fas fa-arrow-left"></i> Back to Profile</a>

    <div class="main-container">
        <div class="dashboard-header">
            <h2><i class="fas fa-key"></i> Change Password</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="password-form-card">
            <div class="student-info">
                <i class="fas fa-user-circle"></i> @Model.StudentName
            </div>

            <form asp-action="ChangePassword" method="post">
                <input type="hidden" asp-for="StudentId" />
                <input type="hidden" asp-for="StudentName" />

                <div class="form-group">
                    <label asp-for="CurrentPassword" class="form-label"></label>
                    <input asp-for="CurrentPassword" type="password" class="form-input" placeholder="Enter your current password" />
                    <span asp-validation-for="CurrentPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <input asp-for="NewPassword" type="password" class="form-input" placeholder="Enter your new password" />
                    <span asp-validation-for="NewPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <input asp-for="ConfirmPassword" type="password" class="form-input" placeholder="Confirm your new password" />
                    <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-key"></i> Change Password
                    </button>
                    <a href="@Url.Action("Dashboard", "Student")" class="btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="margin-top: 20px;"></div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
